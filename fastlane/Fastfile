platform :ios do
  lane :beta do
    setup_ci if ENV['CI']
    match(type: 'appstore', readonly: true, identifier: 'com.satsumabtc.app')
    disable_automatic_code_signing(path: "Satsuma.xcodeproj")
    build_app(
          export_method: options[:export_method],
    )
    upload_to_testflight(skip_waiting_for_build_processing: true)
  end

  lane :certificates do
    match(type: 'appstore')
  end

end